# Server
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/express
DB_HOST=localhost
DB_PORT=5432
DB_PASSWORD=password
DB_USER=postgres
DB_NAME=express

# JWT
ACCESS_TOKEN_SECRET=your_access_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Application
APP_URL=http://localhost:5000

# Client URL (CORS)
CLIENT_URL=http://localhost:3000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=your_redis_url_here

# Background jobs
# Interval in milliseconds (optional). Default: 900000 (15 minutes)
REFRESH_TOKEN_CLEANUP_INTERVAL_MS=900000
# Batch size per run (optional). Default: 500
REFRESH_TOKEN_CLEANUP_BATCH_SIZE=500